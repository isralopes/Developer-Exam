{
  "name": "user-management-backend",
  "version": "1.0.0",
  "description": "Backend API for user management system",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "db:migrate": "dotenv -e .env -- sh -c 'psql -d \"$DATABASE_URL\" -f src/db/schema.sql'",
    "db:seed": "dotenv -e .env -- sh -c 'psql -d \"$DATABASE_URL\" -f src/db/seed.sql'"
  },
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "dotenv-cli": "^11.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
